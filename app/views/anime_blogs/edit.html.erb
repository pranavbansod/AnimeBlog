<h1>Edit blog</h1>

<%= form_with(model: @blog, local: true) do |form| %>

  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@blog.errors.count, "error") %> prohibited
        this blog from being saved:
      </h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :anime_name %><br>
    <%= form.text_field :anime_name ,:value=>@blog.anime_name%>
  </p>

  <p>
    <%= form.label :desc %><br>
    <%= form.text_area :desc, :value=>@blog.desc %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', anime_blogs_path %>