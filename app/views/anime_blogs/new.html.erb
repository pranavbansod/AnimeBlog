<%= render 'welcome/heading' %>
<div class="new-blog-form">
  <h1>Write a blog</h1>

  <%= form_with scope: :anime_blog, url: anime_blogs_path, local: true do |form| %>
    <p>
      <%= form.label :anime_name %><br>
      <%= form.text_field :anime_name, :class => 'anime_name' %>
    </p>

    <p>
      <%= form.label 'Description' %><br>
      <%= form.text_area :desc, :rows => 10, :cols => 75, :class => 'description' %>
    </p>

    <p>
      <%= form.submit :class => 'submit' %>
    </p>
  <% end %>
</div>