<%= render 'welcome/heading' %>
<h1>Sign Up</h1>
<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Invalid inputs</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li>
            <% message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, :class => 'email' %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.label :confirm_password %><br>
    <%= form.password_field :confirm_password %>
  </p>

  <p class="button">
    <%= form.submit %>
  </p>
<% end %>